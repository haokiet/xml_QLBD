@model IEnumerable<XML.Models.CAUTHU>
@{
    ViewBag.Title = "Danh sách cầu thủ";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
    var grid = new WebGrid(Model, canPage: true, defaultSort: "TenNV", rowsPerPage: 5);
}
<main id="main" class="main">

    <div class="pagetitle">
        <h1>Danh sách cầu thủ</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href=#>Home</a></li>
                <li class="breadcrumb-item">Sân</li>
                <li class="breadcrumb-item active">Dữ liệu</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">

                        @Html.ActionLink("Thêm", "Create", "San")

                        <table class="table datatable">
                            <thead>
                                <tr>
                                    <th>Mã cầu thủ</th>
                                    <th>Họ và tên</th>
                                    <th>Vị trí</th>
                                    <th>Ngày sinh</th>
                                    <th>Địa chỉ</th>
                                    <th>Tên câu lạc bộ</th>
                                    <th>Tên quốc gia</th>
                                    <th>Số áo</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @item.MACT
                                    </td>
                                    <td>
                                        @item.HOTEN
                                    </td>
                                    <td>
                                        @item.VITRI
                                    </td>
                                    <td>
                                        @item.NGAYSINH
                                    </td>
                                    <td>
                                        @item.DIACHI
                                    </td>
                                    <td>
                                        @item.MACLB
                                    </td>
                                    <td>
                                        @item.MAQG
                                    </td>
                                    <td>
                                        @item.SO
                                    </td>
                                    <td>@Html.ActionLink("Chi tiết", "Detail", "CauThu", new { id = item.MACT }, "") |
                                        @Html.ActionLink("Sửa", "Edit", "CauThu", new { id = item.MACT }, "") |
                                        @Html.ActionLink("Xóa", "Delete", "CauThu", new { id = item.MACT }, "")
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </section>

</main><!-- End #main -->
