@model IEnumerable<XML.Models.SAN>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}



<main id="main" class="main">

    <div class="pagetitle">
        <h1>Sân</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href=#>Home</a></li>
                <li class="breadcrumb-item">Sân</li>
                <li class="breadcrumb-item active">Dữ liệu</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">

                        @Html.ActionLink("Thêm", "Create", "San")

                        <table class="table datatable">
                            <thead>
                                <tr>
                                    <th>Mã Sân</th>
                                    <th>Tên Sân</th>
                                    <th>Địa Chỉ</th>
                                    <th>tinh nag</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.MASAN
                                        </td>
                                        <td>
                                            @item.TENSAN
                                        </td>
                                        <td>
                                            @item.DIACHI
                                        </td>
                                        <td>
                                            @Html.ActionLink("Sửa", "Edit", "San", new { id = item.MASAN }, "")
                                            @Html.ActionLink("Xóa", "Delete", "San", new { id = item.MASAN }, "")
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </section>

</main><!-- End #main -->
